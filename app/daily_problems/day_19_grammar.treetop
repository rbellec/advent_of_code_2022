grammar BluePrints
  rule blueprints
    (blueprint sp)+
  end

  rule blueprint
    'Blueprint' sp number sp ':' sp robot_cost+
  end

  rule robot_cost
    sp 'Each' sp material sp 'robot costs' sp cost ( sp 'and' sp cost)* '.'
  end

  rule cost
    number sp material
  end

  rule number
    [0-9]+
  end

  rule material
    'ore' / 'clay' / 'obsidian' / 'geode'
  end

  rule sp
    [ \n\t]*
  end
end
